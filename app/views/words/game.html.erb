<h1> Welcome to the longest word-game </h1>
<h2> Here is your grid: </h2>
<%= @grid.join(" ") %>

<form action="/score" method="get" >
  <div class="form-group text-center">
    <label for="guess">What's your best shot?</label>
    <input type="text" id="guess" name="guess" placeholder="My guess is..." class="form-control text-center">
    <input type="hidden" name="start_time" value="<%= @start_time %>">
    <input type="hidden" name="grid" value="<%= @grid %>">
  </div>
  <input type="submit" value="Done!" class="btn btn-primary">
</form>

